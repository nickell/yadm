battery_level {
    format = "{charging_character} {percent}%"
    hide_when_full = true
}
#
weather_owm {
    api_key = env(OWM_API_KEY)
    format = '<span color="#FBC02D">{icon}</span> {temperature}[ {rain}]'
    format_temperature = '[\?color=all {current:.0f}¬∞{unit}]'
    location = (env(LAT),env(LONG))
}
